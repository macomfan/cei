<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<sdk exchange="huobipro" document="https://huobiapi.github.io/docs/spot/v1/en/">

    <model name="Symbols">
        <string name="status"/>
        <object_list name="data" refer="SymbolsData"/>
    </model>

    <model name="SymbolsData">
        <string name="base_currency"/>
        <string name="quote_currency"/>
    </model>

    <model name="Currencies">
        <string name="status"/>
        <string_list name="data"/>
    </model>

    <model name="LastTrade">
        <string name="status"/>
        <object name="tick" refer="LastTradeTick"/>
    </model>

    <model name="LastTradeTick">
        <string name="ts"/>
        <object_list name="data" refer="LastTradeData"/>
    </model>

    <model name="LastTradeData">
        <string name="direction"/>
    </model>

    <model name="LastTradeEx">
        <string name="status"/>
        <object name="data" refer="LastTradeData"/>
    </model>

    <signature name="restful">
        <get_now output="{timestamp}" format=""/>
        <append_query_string key="AccessKeyId" value="{apikey}"/>
        <append_query_string key="SignatureMethod" value="HmacSHA256"/>
        <append_query_string key="SignatureVersion" value="2"/>
        <append_query_string key="timestamp" value="{timestamp}"/>
        <get_query_sting_list output="{queryStringList}"/>
        <sort_list output="{queryStringList}" input="{output}" order="ASC"/>
        <combine_string_list output="{newurlbuffer}" input="{queryStringList}" separator="&amp;"/>
        <get_method output="{method}" uppercase="true"/>
        <get_host output="{host}"/>
        <get_path output="{path}"/>
        <append_list input="{buffer}" item="{method}"/>
        <append_list input="{buffer}" item="{host}"/>
        <append_list input="{buffer}" item="{path}"/>
        <append_list input="{buffer}" item="{newurlbuffer}"/>
        <combine_string_list output="{newbuffer}" input="{buffer}" separator="\n"/>
    </signature>


    <restful client_name="MarketClient" url="https://api.huobi.so">
        <interface name="getSymbol">
            <headers>
                <header tag="accept-encoding" value="gzip"/>
            </headers>
            <request method="get" target="/v1/common/symbols"/>
            <response type="model">
                <json_parser model="Symbols">
                    <json_string from="status" to="{status}"/>
                    <json_array from="data" to="{data}" model="SymbolsData">
                        <json_string from="base-currency" to="{base_currency}"/>
                    </json_array>
                </json_parser>
            </response>
        </interface>

        <interface name="getCurrencies">
            <request method="get" target="/v1/common/currencys"/>
            <response type="model">
                <json_parser model="Currencies">
                    <json_string from="status" to="{status}"/>
                    <json_string_array from="data" to="{data}"/>
                </json_parser>
            </response>
        </interface>

